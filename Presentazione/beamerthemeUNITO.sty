\mode<presentation>

% Requirement
\RequirePackage{tikz}
\usetikzlibrary{calc, mindmap, shapes} % mindmap and shapes are require for the ML mindmap

% Settings
\usecolortheme{UNITO}
\useinnertheme{UNITO}
\useoutertheme{UNITO}
\usefonttheme{UNITO}

% remove beamer navigation symbols
\setbeamertemplate{navigation symbols}{}

% shrink margins
\setbeamersize{text margin left=1.25em,text margin right=1.25em}

% lists, captions
\setbeamertemplate{enumerate items}[default]

% blocks like theorem
\setbeamertemplate{blocks}[rounded][shadow=false]

\mode<all>
