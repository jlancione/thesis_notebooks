\mode<presentation>

% Requirement
\RequirePackage{tikz}
\usetikzlibrary{calc}

% Settings
\usecolortheme{FAIR}
\useinnertheme{FAIR}
\useoutertheme{FAIR}
\usefonttheme{FAIR}

% remove beamer navigation symbols
\setbeamertemplate{navigation symbols}{}

% shrink margins
\setbeamersize{text margin left=1.25em,text margin right=1.25em}

% lists, captions
\setbeamertemplate{enumerate items}[default]


% blocks like theorem
\setbeamertemplate{blocks}[rounded][shadow=true]

\mode<all>
